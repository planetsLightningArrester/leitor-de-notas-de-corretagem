{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "exclude": [
    "src/__tests__",
    "src/client",
    "dist",
    "playwright.config.ts",
    "forge.config.js"
  ]
}